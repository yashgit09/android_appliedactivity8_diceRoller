<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiceRoller.MainPage">

    <StackLayout>
        <StackLayout RadioButtonGroup.GroupName="Dice">
            <Label Text="Select a die:"/>
            <RadioButton Content="d4"/>
            <RadioButton Content="d6"/>
            <RadioButton Content="d8"/>
            <RadioButton Content="d10"/>
            <RadioButton Content="d12"/>
            <RadioButton Content="d20"/>
        </StackLayout>
    </StackLayout>

</ContentPage>
